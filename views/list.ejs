<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.1/index.global.min.js'></script>
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <%- include ('./top') %>
        <form action="" method="post">
            <input type="search" name="search" id="search" placeholder="Type e-mail or CPF">
            <button class="btn btn-primary">Search</button>
        </form>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">ID:</th>
                <th scope="col">Name:</th>
                <th scope="col">e-mail:</th>
                <th scope="col">Description:</th>
                <th scope="col">Finished:</th>
                <th scope="col">Action:</th>
              </tr>
            </thead>
            <tbody>
                <% appos.forEach(appo => { %>
                    <tr>
                        <th scope="row" id="appointmentId"><%= appo._id %></th>
                        <td><%= appo.name %></td>
                        <td><%= appo.email %></td>
                        <td><%= appo.description %></td>
                        <td><%= appo.finished %></td>
                        <% if(appo.finished == false) { %>
                            <form action="/finish" method="post">
                                <input type="hidden" name="id" value="<%= appo._id %>">
                                <td><button type="submit" class="btn btn-danger btn-block">Mark as finished</button></td>
                            </form>
                        <% } %>
                      </tr>
                    <% }) %>
              
            </tbody>
          </table>
         

    </div>
        
    
    
</body>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofN4zfuZxLkoj1gXtW8ANNCe9d5Y3eG5eD" crossorigin="anonymous"></script>


</html>

